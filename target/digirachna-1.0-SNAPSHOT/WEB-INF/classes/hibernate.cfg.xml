<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/blog?useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <mapping class="com.blog.entity.Admin" />
        <mapping class="com.blog.entity.Blog" />
        <mapping class="com.blog.entity.Blogger" />
        <mapping class="com.blog.entity.Comments" />
        
    </session-factory>
</hibernate-configuration>